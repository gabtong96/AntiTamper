<Window x:Class="AntiTamper.CoverPageError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiTamper"
        mc:Ignorable="d"
        Title="Save Error" Height="120" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="error.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>

        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20" MaxWidth="390" TextWrapping="Wrap" Height="auto" Width="auto" FontSize="14">
            Another file with name "Test_Report_CoverPage.pdf" is already open. Please close before trying again.
        </TextBlock>

        <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 10, 5" Height="Auto" Width="70" IsCancel="True" IsDefault="True">OK</Button>

    </Grid>
</Window>
